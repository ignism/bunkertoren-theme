{% extends 'base.twig' %}

{% set body_classes = ['single-appartments', 'has-360-views'] %}
{% set navbar_image = theme.link ~ '/assets/images/back-arrow.svg' %}
{% set navbar_link = site.link ~ '/woningen/?jump=appartments-list' %}

{% block body %}

    {% include 'components/fullscreen-360.twig' %}
    
    {% include 'sections/appartment-plan.twig' with {
        'background_color': 'light-red',
        'blend_color': '#EAE2E1',
        'plan': post.get_field('appartment_plan'),
        'plan_two': post.get_field('appartment_plan_two'),
        'plan_three': post.get_field('appartment_plan_three'),
        'flex': post.get_field('appartment_flex'),
        'title': post.title,
        'text': post.get_field('appartment_description')
    } %}

    {% include 'sections/appartment-details.twig' with {
    'room_list': post.get_field('appartment_rooms'),
    'statistics': [
        {
            'key': 'Gebruiksopp.',
            'value': post.get_field('appartment_gebruiksoppervlak')
        }, {
            'key': 'Buitenruimte',
            'value': post.get_field('appartment_buitenruimte')
        }, {
            'key': 'Verdieping',
            'value': post.get_field('appartment_verdieping')
        }, {
            'key': 'Aantal Kamers',
            'value': post.get_field('appartment_aantal_kamers')
        }, {
            'key': 'Kavel nummers',
            'value': post.get_field('appartment_kavelnummers')
        }
    ], 
    'aanzichten_no': post.get_field('appartment_noordoost_aanzicht'),
    'aanzichten_zw': post.get_field('appartment_zuidwest_aanzicht'),
    'aanzichten_floor_plan': post.get_field('appartment_floor_plan'),
    'windrichting': post.get_field('appartment_windrichting')
} %}

{% endblock %}