{% extends '../base.twig' %}

{% set body_classes = ['page-about', 'has-floating-message'] %}

{% block body %}

    {% include '../components/header.twig' with {
        'header': 'over<br>bunkertoren',
        'background_color': 'light-gold'
    } %}

    {% include '.sections/text-image.twig' with {
        'slides': [
            {'image': 'http://placehold.it/1600x1200'},
            {'image': 'http://placehold.it/1600x1200'}
        ],
        'title': 'trans &mdash;<br>formatie',
        'text': 'Het centrum van Eindhoven groeit en dat wordt zichtbaar met de komst van De Bunkertoren; een woontoren van hoogwaardige kwaliteit, omringd door een groen stadpark en op steenworp afstand van Eindhoven Centraal Station.<br><br>
        De Bunkertoren is een transformatie van het iconische bouwwerk, een voormalig studentencentrum, tot een woon / werk gebied. De Bunkertoren vertelt een verhaal van geschiedenis en toekomst, van herinneringen en dromen.'
    } %}

    {% include '.sections/text-image.twig' with {
        'background_color': 'light-gold',
        'slides': [
            {'image': 'http://placehold.it/1600x1200'},
            {'image': 'http://placehold.it/1600x1200'},
            {'image': 'http://placehold.it/1600x1200'}
