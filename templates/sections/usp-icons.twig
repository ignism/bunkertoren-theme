{% extends 'sections/section.twig' %}

{% set section_classes = ['usp-icons', 'fit-height'] %}

{% block content %}

    <div class="columns is-multiline">

        {% for icon in icons %}
        <div class="column is-4 is-offset-1">
            <div class="columns level is-mobile">
                <div class="column has-text-right is-3-mobile is-offset-1-mobile is-3-tablet"><img class="usp-icon" src="{{ TimberImage(icon.image).src }}" alt=""></div>
                <div class="column has-text-centered is-3-mobile is-3-tablet"><img class="usp-icon" src="{{ theme.link ~ '/assets/images/usp-arrow.svg' }}" style="width: 60%; padding-top: 0.15rem"></div>
                <div class="column has-text-left is-5-mobile is-6-tablet">
                    <p>{{ icon.text }}
                    </p>
                </div>
            </div>
        </div>
        {% endfor %}

    </div>

{% endblock %}