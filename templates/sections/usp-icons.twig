        <div class="column is-4 is-offset-1">
            <div class="columns level is-mobile">
                <div class="column has-text-right is-3-mobile is-offset-1-mobile is-3-tablet"><img class="usp-icon" src="{{ usp_icon_green }}" alt=""></div>
                <div class="column has-text-centered is-3-mobile is-3-tablet"><img class="usp-icon" src="{{ usp_arrow }}" alt=""></div>
