{% extends 'sections/section.twig' %}

{% set section_classes = ['partners', 'fit-height'] %}

{% block content %}

    <div class="columns">
        <div class="column text-column is-5-tablet is-4-desktop">
            <div data-appear="">
                <h1>Partners</h1>
            </div>
            <div data-appear="" data-appear-delay="200ms">
                <p>{{ text }}</p>
            </div>
        </div>
        <div class="column text-column is-7-tablet is-8-desktop">
            <div class="columns is-multiline">

                {% for partner in partners %}
                    <div class="column is-6">
                        <div class="content partner">
                            <p>{{ partner.role }}</p>
                            <p class="logo">
                                <img src="{{ TimberImage(partner.logo).src }}" alt="">
                            </p>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>

{% endblock %}